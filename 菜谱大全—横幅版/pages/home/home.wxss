/* pages/home/home.wxss */
.cate-list{
  white-space: nowrap; /* 让子元素不换行 */
  background: #F65E2E;
  color: #FFF;
  padding: 40rpx 0;
}

.cate-list-item{
  padding: 0 20rpx;
  display: inline-block;
}

.cate-item-title{
  padding: 10rpx 0;
}

.active{
  border-bottom: 4rpx solid #FFF;
}

.flex-row{
  margin-top: 50rpx;
  padding: 20rpx;
  display: flex;
  flex-flow: row wrap;
}

.flex-item{
  margin-bottom: 40rpx;
  text-align: center;
  flex: 0 1 33.33%;
}
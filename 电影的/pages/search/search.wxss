.search {
  width: 100%;
  height: 90rpx;
  background-color: #FFF;
  color: #000;
  display: flex;
  flex-direction: row; 
  /* align-items: center;  */
  /* justify-content:center; */
  position: relative;
  margin-bottom: 3%;
}
.search .left{
  width:75%;
  /* padding: 0 10rpx; */
  margin-left:30rpx;
  border:1px solid #e6e6e6;
  background-color: #e6e6e6;
}
input::-webkit-input-placeholder {
  margin-left:20rpx;
  font-size: 12px;
    
     }

.search .input{
  height: 80rpx;
  line-height: 80rpx;
}
.search .right{
  width: 20%;
}

.search button{
  color: #000;
  background-color: #FFF;
} 

.search button::after{
  border:0;
}
.content{
  width:100%;
  height:450rpx;
  /* background: red; */
  position: relative;
  
}

.picture{
  width:280rpx;
  height:280rpx;
  position: absolute;
  right:50rpx;
  top:10%;
}
.title{
  height:200rpx;
  width:320rpx;
  /* background: blue; */
  position: absolute;
  top:10%;
  left:50rpx;
  font-size: 36rpx;
}
.from{
  width:200rpx;
  height:60rpx;
  /* background: green; */
  position: absolute;
  bottom:10%;
  left:80rpx;
  font-size: 32rpx;
   color:#e6e6e6;
}
.icon{
  width:60rpx;
  height:60rpx;
  position: absolute;
  bottom:11%;
  left:28rpx;
}
.time{
  width:280rpx;
  height:60rpx;
  /* background: red; */
  position: absolute;
  bottom:9%;
  right:30rpx;
  font-size: 32rpx;
  color:#e6e6e6;
}
.line{
  width:100%;
  height:8rpx;
  background: #e6e6e6;
  position: absolute;
  bottom:1%;
}
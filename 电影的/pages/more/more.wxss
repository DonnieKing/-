.search {
  width: 100%;
  height: 90rpx;
  background-color: #FFF;
  color: #fff;
  display: flex;
  flex-direction: row; 
  /* align-items: center;  */
  /* justify-content:center; */
  position: relative;
}
.search .left{
  width:75%;
  /* padding: 0 10rpx; */
  margin-left:30rpx;
  border:1px solid #e6e6e6;
  background-color: #e6e6e6;
}
input::-webkit-input-placeholder {
  margin-left:20rpx;
  font-size: 12px;
    
     }

.search .input{
  height: 80rpx;
  line-height: 80rpx;
}
.search .right{
  width: 20%;
}

.search button{
  color: #000;
  background-color: #FFF;
} 

.search button::after{
  border:0;
}
.item{
  margin-top:5%;
  width:100%;
  height:200rpx;
  display: flex;
  flex-flow: row wrap;
}
.item_title{
  text-align: center;
  font-size: 38rpx;
  height:90rpx;
  line-height: 90rpx;
  width:35%;
  border:1px solid #e6e6e6;
  border-radius: 30rpx;
  margin:20rpx 7%;
}
.weui-footer__text{
  position: absolute;
  bottom:50rpx;
  left:30%;
  padding-top: 15px;
  padding-bottom: 20px;
  text-align: center;
  color:gray;
  font-size: 28rpx;
}
.ad{
  margin-top:20%;
  width:100%;
  height:500rpx;
